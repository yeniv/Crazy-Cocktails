<h1>Add a new cocktail</h1>

<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Create cocktail", class: "btn btn-lg btn-outline-success" %>
  <%= link_to "Back to cocktails", cocktails_path, class: "btn btn-lg btn-outline-danger" %>
<% end %>
